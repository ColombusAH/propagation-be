# Build stage for Node.js and Prisma
FROM node:22.3-slim AS prisma-builder

WORKDIR /app

# Install OpenSSL and Python for prisma-client-py
RUN apt-get update -y && \
    apt-get install -y --no-install-recommends openssl python3 python3-venv python3-pip && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/* && \
    python3 -m venv /venv && \
    /venv/bin/pip install --no-cache-dir prisma

# Copy package files for npm install
COPY package.json package-lock.json* ./

# Install specific Prisma version that works with Python client
RUN npm install --production && \
    npm install prisma@5.17.0 @prisma/client@5.17.0

# Copy Prisma schema
COPY prisma ./prisma/

# Generate Prisma client using the virtual environment Python
RUN PATH="/venv/bin:$PATH" npx prisma@5.17.0 generate

# Python builder stage for any compilations needed
FROM python:3.12-slim AS python-builder

WORKDIR /build

COPY requirements.txt .

# Install build dependencies and Python packages
RUN apt-get update && \
    apt-get install -y --no-install-recommends build-essential && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/* && \
    pip install --no-cache-dir --upgrade pip && \
    pip wheel --no-cache-dir --wheel-dir=/build/wheels -r requirements.txt

# Final stage
FROM python:3.12-slim

WORKDIR /app

# Runtime dependencies only
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    openssl \
    curl \
    gnupg && \
    curl -fsSL https://deb.nodesource.com/setup_20.x | bash - && \
    apt-get update && \
    apt-get install -y --no-install-recommends nodejs && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/* && \
    npm install -g npm@latest && \
    npm cache clean --force

# Create and activate Python virtual environment
RUN python -m venv /venv
ENV PATH="/venv/bin:$PATH"

# Install Python dependencies from wheels
COPY --from=python-builder /build/wheels /wheels
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir /wheels/* && \
    if ! grep -q "prisma" requirements.txt; then pip install --no-cache-dir prisma; fi && \
    rm -rf /wheels

# Copy Prisma client from builder
COPY --from=prisma-builder /app/node_modules/.prisma /app/node_modules/.prisma
COPY --from=prisma-builder /app/node_modules/@prisma/client /app/node_modules/@prisma/client
COPY --from=prisma-builder /app/prisma /app/prisma

# Copy application code
COPY . .

# Set environment variables
ENV DATABASE_URL=postgresql://postgres:postgres@db:5432/shifty
ENV PRISMA_ENGINES_CHECKSUM_IGNORE_MISSING=1
# Don't hardcode SECRET_KEY - should be provided at runtime via environment
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Make entrypoint script executable
RUN chmod +x /app/docker-entrypoint.sh

# Create a non-root user and switch to it
RUN adduser --disabled-password --gecos "" appuser && \
    chown -R appuser:appuser /app && \
    chown -R appuser:appuser /venv
USER appuser

# Set the entrypoint script
ENTRYPOINT ["/app/docker-entrypoint.sh"]

# The startup command for production
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--workers", "4"] 